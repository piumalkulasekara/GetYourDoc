<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/delete_appointment_linear_layout"
              android:background="@drawable/b"
              android:padding="10dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/delete_appointment_title_label"
              android:layout_gravity="center"
              android:padding="10dp"
              android:text="@string/lblDelete_Appointment"
              android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/btneDeleteAllAppointments"
            android:padding="5dp"
            android:text="@string/delete_all_appointments_label"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/btnSelectAppointmenToDelete"
            android:text="@string/select_appointment_to_delete_label"/>

    <ListView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/list_view">

    </ListView>

</LinearLayout>